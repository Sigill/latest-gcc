{
  "compilerOptions": {
    "target": "esnext",
    "lib": [],
    "module": "nodenext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "removeComments": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist/"
  },
  "files": [
    "ci.ts",
    "shell-quoting.ts"
  ]
}
